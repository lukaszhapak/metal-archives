<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="source.lyric.LyricController"
      prefHeight="660.0" prefWidth="1200.0">

    <Pane fx:id="topBarBackground" prefHeight="74.0" prefWidth="1200.0">
        <fx:include source="lyricTopBarView.fxml" fx:id="topBar"/>
    </Pane>

    <Pane fx:id="tableBackground" layoutX="50.0" layoutY="80.0" prefHeight="450.0" prefWidth="1100.0">
        <fx:include source="lyricTableView.fxml" fx:id="table"/>
    </Pane>

    <Pane fx:id="formBackground" prefWidth="1200.0">
        <fx:include source="lyricFormView.fxml" fx:id="form"/>
    </Pane>

    <Button fx:id="openFormButton" layoutX="495.0" layoutY="573.0" mnemonicParsing="false"
            onMouseClicked="#showAddLyricForm" text="Add new lyric">
        <font>
            <Font size="20.0"/>
        </font>
    </Button>
</Pane>
